@model WorkshopManager.Models.Vehicle

@{
    ViewData["Title"] = "Dodaj pojazd";
}

<h1>Dodaj nowy pojazd</h1>

<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="VIN" class="control-label"></label>
        <input asp-for="VIN" class="form-control" />
        <span asp-validation-for="VIN" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="RegistrationNumber" class="control-label">Numer rejestracyjny</label>
        <input asp-for="RegistrationNumber" class="form-control" />
        <span asp-validation-for="RegistrationNumber" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CustomerId" class="control-label">Klient</label>
        <select asp-for="CustomerId" class="form-control" asp-items="ViewBag.Customers">
            <option value="">-- Wybierz klienta --</option>
        </select>
        <span asp-validation-for="CustomerId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="vehicleImage" class="control-label">Zdjęcie pojazdu (opcjonalne)</label>
        <input type="file" name="vehicleImage" id="vehicleImage" class="form-control" accept="image/*" />
        <small class="form-text text-muted">Wybierz zdjęcie pojazdu (JPG, PNG, itp.)</small>
    </div>

    <button type="submit" class="btn btn-primary">Zapisz</button> |
    <a asp-action="Index">Anuluj</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}