@model WorkshopManager.Models.Part
@{
    ViewData["Title"] = "Edytuj część";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h4>Edycja części</h4>
            </div>
            <div class="card-body">
                <form asp-action="Edit" method="post">
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(m => m.Id)
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="mb-3">
                        <label asp-for="Name" class="form-label">Nazwa części *</label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="UnitPrice" class="form-label">Cena jednostkowa *</label>
                                <div class="input-group">
                                    <input asp-for="UnitPrice" class="form-control" type="number" step="0.01" min="0" />
                                    <span class="input-group-text">zł</span>
                                </div>
                                <span asp-validation-for="UnitPrice" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="StockQuantity" class="form-label">Ilość w magazynie *</label>
                                <div class="input-group">
                                    <input asp-for="StockQuantity" class="form-control" type="number" min="0" />
                                    <span class="input-group-text">szt.</span>
                                </div>
                                <span asp-validation-for="StockQuantity" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Description" class="form-label">Opis (opcjonalnie)</label>
                        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i> Zapisz zmiany
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-times"></i> Anuluj
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
