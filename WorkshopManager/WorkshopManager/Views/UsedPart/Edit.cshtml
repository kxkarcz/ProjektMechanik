@model WorkshopManager.DTOs.UsedPartDto
@{
    ViewData["Title"] = "Edytuj zużytą część";
}

<h1>Edytuj zużytą część</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="PartName" class="form-label">Część</label>
        <input asp-for="PartName" class="form-control" readonly />
    </div>

    <div class="mb-3">
        <label asp-for="Quantity" class="form-label">Ilość</label>
        <input asp-for="Quantity" class="form-control" type="number" min="1" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Cena jednostkowa</label>
        <input class="form-control" value="@Model.PartPrice.ToString("0.00") zł" readonly />
    </div>

    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-primary">Zapisz</button>
        <a asp-action="Index" class="btn btn-secondary">Anuluj</a>
    </div>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
