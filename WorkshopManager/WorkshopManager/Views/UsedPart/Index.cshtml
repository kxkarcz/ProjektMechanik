@model IEnumerable<WorkshopManager.Models.UsedPart>

@{
    ViewData["Title"] = "Zużyte części";
}

<h1>Lista zużytych części</h1>

<p><a asp-action="Create" class="btn btn-primary">Dodaj nową pozycję</a></p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Ilość</th>
            <th>Część</th>
            <th>Akcje</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Quantity</td>
                <td>@(item.Part?.Name ?? "Brak danych")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Szczegóły</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edytuj</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Usuń</a>
                </td>
            </tr>
        }
    </tbody>
</table>