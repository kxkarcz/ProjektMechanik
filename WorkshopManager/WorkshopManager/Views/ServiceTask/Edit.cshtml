@model WorkshopManager.Models.ServiceTask

@{
    ViewData["Title"] = "Edytuj zadanie";
}

<h1>Edytuj zadanie serwisowe</h1>

<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="LaborCost" class="control-label"></label>
        <input asp-for="LaborCost" class="form-control" type="number" step="0.01" min="0" />
        <span asp-validation-for="LaborCost" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ServiceOrderId" class="control-label">Zlecenie serwisowe</label>
        <select asp-for="ServiceOrderId" class="form-control" asp-items="ViewBag.ServiceOrders">
            <option value="">-- Wybierz zlecenie --</option>
        </select>
        <span asp-validation-for="ServiceOrderId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Zapisz</button> |
    <a asp-action="Index">Anuluj</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}